%h2.title-form S'inscrire

= render "profiles/flash", :flash => flash

= simple_form_for(resource, :as => resource_name, :wrapper => :inline, :url => registration_path(resource_name)) do |f|

  .box-connect
    = f.input :email, :required => true
    = f.input :password, :required => true
    = f.input :password_confirmation, :required => true
    = f.hidden_field :skip_confirmation, :value => false

    .btn-connect
      = f.button :submit, "S'inscrire"