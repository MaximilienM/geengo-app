= field_wrapper_for(form, field, :messages_and_help => false) do
  - if field.bindings[:object].send("#{field.name}_url")
    .row
    = link_to "Voir le document", field.bindings[:object].document.url
    %br
    %br
    = form.label "remove_#{field.name}", "Supprimer le #{field.label.downcase}", class: "inline"
    = form.check_box "remove_#{field.name}"
  %br
  %br
  .row
  = form.file_field field.method_name, :class => [field.css_class, (field.has_errors? && "errorField")]
  - if field.has_errors?
    %span.errorMessage(style="margin-left:3px") #{field.label } #{field.errors.first}
    = form.hidden_field "#{field.name}_cache"